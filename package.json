{
  "name": "ts-rollup-reactlib",
  "version": "0.0.1",
  "description": "TypeScript Rollup React Library NPM Package Template",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "check:types": "tsc --project . --rootDir src/ --noEmit",
    "check:formatting:ci:github": "prettier --check \".github/**/*.yml\"",
    "check:formatting:src": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,md}\"",
    "check:formatting": "npm run check:formatting:src && npm run check:formatting:ci:github",
    "check": "npm run check:formatting && npm run check:types",
    "build:types": "tsc --project . --rootDir src/ --outDir dist/types/ --declaration --emitDeclarationOnly",
    "build:types:clean": "rimraf dist/types/",
    "build:js": "rollup -c",
    "build:js:clean": "rimraf dist/cjs dist/bin dist/esm",
    "build": "npm run build:clean && npm run build:types && npm run build:js",
    "build:clean": "npm run build:js:clean && npm run build:types:clean",
    "lint:src": "eslint src --ext .js,.ts,.jsx,.tsx",
    "lint:tests": "eslint tests --ext .js,.ts,.jsx,.tsx",
    "lint": "npm run lint:src && npm run lint:tests",
    "coverage": "jest --config=jest.jsdom.config.js --coverage",
    "test": "jest --config=jest.jsdom.config.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": "makadev <npm@makadev.de>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@rollup/plugin-typescript": "8.3.1",
    "@storybook/addon-actions": "6.4.19",
    "@storybook/addon-essentials": "6.4.19",
    "@storybook/addon-interactions": "6.4.19",
    "@storybook/addon-links": "6.4.19",
    "@storybook/builder-webpack5": "6.4.19",
    "@storybook/manager-webpack5": "6.4.19",
    "@storybook/react": "6.4.19",
    "@storybook/testing-library": "0.0.9",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.4",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.41",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "babel-loader": "8.2.3",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.2",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-storybook": "0.5.7",
    "jest": "27.5.1",
    "prettier": "2.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rollup": "2.70.1",
    "ts-jest": "27.1.3",
    "typescript": "4.6.2",
    "webpack": "5.70.0"
  },
  "peerDependencies": {
    "react": ">=17"
  }
}
